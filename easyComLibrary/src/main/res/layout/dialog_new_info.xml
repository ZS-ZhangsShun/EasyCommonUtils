<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_info_shape"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_new_info_content_marginleft"
        android:layout_marginTop="@dimen/dialog_new_info_content_margintop"
        android:layout_marginRight="@dimen/dialog_new_info_content_marginright"
        android:layout_marginBottom="@dimen/dialog_new_info_content_marginbottom"
        android:gravity="center_horizontal"
        android:textColor="@color/dialog_title_color"
        android:textSize="@dimen/dialog_new_info_content_textsize" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_new_info_divider_height"
        android:background="@color/dialog_light_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_new_info_buttonline_width"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="@dimen/dialog_new_info_button_width"
            android:layout_height="@dimen/dialog_new_info_button_height"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_clicked"
            android:gravity="center"
            android:text="@string/dialog_new_info_leftbtn_text"
            android:textColor="@color/dialog_title_color"
            android:textSize="@dimen/dialog_new_info_button_textsize" />

        <View
            android:layout_width="@dimen/dialog_new_info_divider_width"
            android:layout_height="match_parent"
            android:background="@color/dialog_light_line_color" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="@dimen/dialog_new_info_button_width"
            android:layout_height="@dimen/dialog_new_info_button_height"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_clicked"
            android:gravity="center"
            android:text="@string/dialog_new_info_rightbtn_text"
            android:textColor="@color/dialog_title_color"
            android:textSize="@dimen/dialog_new_info_button_textsize" />
    </LinearLayout>

</LinearLayout>