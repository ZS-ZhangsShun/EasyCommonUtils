<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/progress_backgrounp" >

    <ImageView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dialog_progress_image_margintop"
        android:background="@drawable/process_my_style" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="@dimen/dialog_progress_textview_paddingbottom"
        android:paddingTop="@dimen/dialog_progress_textview_paddingtop"
        android:text="@string/dialog_progess_textview_text"
        android:textColor="@color/dialog_pressed_normal"
        android:textSize="@dimen/dialog_progress_textview_textsize" />

</RelativeLayout>